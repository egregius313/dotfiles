[user]
	name = Edward Minnix III
	# make git prompt for email before allowing commits, this forces
	# me to specify my email on a per-repo basis instead of globally
	useConfigOnly = true
	email = egregius313@gmail.com

[core]
	editor = emacs
	excludesfile = ~/.gitignore
	autocrlf = input

# Enforce SSH
[url "git@github.com:"]
  insteadOf = https://github.com/
[url "git@gitlab.com:"]
  insteadOf = https://gitlab.com/
[url "git@bitbucket.org:"]
  insteadOf = https://bitbucket.org/