[user]
	name = Edward Minnix
	# make git prompt for email before allowing commits, this forces
	# me to specify my email on a per-repo basis instead of globally
	useConfigOnly = true

[core]
	editor = emacs
	excludesfile = ~/.gitignore

# Enforce SSH
[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
  insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
  insteadOf = https://bitbucket.org/